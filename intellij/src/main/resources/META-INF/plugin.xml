<idea-plugin>
    <id>gigaherz.stab.stab.tools.intellij</id>
    <name>Stab Language Support</name>
    <vendor email="gigaherz+stab@gmail.com" url="https://gigaherz.dev">Gigaherz</vendor>

    <description>
    Adds support for the Stab programming language for the JVM.
    </description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <fileType name="StabSource" implementationClass="gigaherz.stab.tools.intellij.StabFileType" />
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>